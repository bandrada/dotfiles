#!/bin/bash

# Launch the passed in URL as a web app in the default browser (or chromium if the default doesn't support --app).

browser=$(xdg-settings get default-web-browser)

case $browser in
google-chrome* | brave-browser* | microsoft-edge* | opera* | vivaldi* | helium*) ;;
*) browser="chromium.desktop" ;;
esac

#exec setsid -- $(sed -n 's/^Exec=\([^ ]*\).*/\1/p' /usr/share/applications/$browser 2>/dev/null | head -1) --app="$1" "${@:2}"
#exec xdg-open "$1" #opens browser
exec "$(sed -n 's/^Exec=\([^ ]*\).*/\1/p' /usr/share/applications/$browser ~/.local/share/applications/$browser 2>/dev/null | head -1)" --app="$1" "${@:2}"
#nohup "$(sed -n 's/^Exec=\([^ ]*\).*/\1/p' /usr/share/applications/$browser ~/.local/share/applications/$browser 2>/dev/null | head -1)" --app="$1" "${@:2}" >/dev/null 2>&1 &
#exit

